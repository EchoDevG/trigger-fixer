{ 
"name": "Trigger Fixer", 
"description": "Never feel uncomfortable again!", 
"version": "0.0.0.1", 
"manifest_version": 3,
 "permissions": ["storage"],
 "icons": { "16": "TFIcon16.png",
           "48": "TFIcon48.png",
          "128": "TFIcon128.png" },
 "action": {
    "default_popup": "popup.html"
  },
"options_ui": {
  "page": "options.html",
  "open_in_tab": true
},
  "content_scripts":
  [
  {
	  "matches": ["*://*/*"],
	  "all_frames": true,
	  "js": ["content_script.js"],
	  "run_at": "document_end"
  }
  ]

}
