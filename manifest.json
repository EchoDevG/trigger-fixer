{ 
"name": "Trigger Fixer", 
"description": "Never feel uncomfortable again!", 
"version": "1.0", 
"manifest_version": 2,
"permissions": ["storage", "activeTab"],
"content_security_policy": "'script-src' 'self' 'unsafe-inline'",
"options_page": "options.html",
  "content_scripts":
  [
  {
	  "matches": ["*://*/*"],
	  "all_frames": true,
	  "js": ["content_script.js"],
	  "run_at": "document_end"
  }
  ]
}
