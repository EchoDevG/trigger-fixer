{ 
"name": "Trigger Fixer", 
"description": "Never feel uncomfortable again!", 
"version": "1.0", 
"manifest_version": 3,
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
"options_page": "options.html",
  "content_scripts":
  [
  {
	  "matches": ["*://*/*"],
	  "all_frames": true,
	  "js": ["content_script.js"],
	  "run_at": "document_end"
  }
  ]

}
